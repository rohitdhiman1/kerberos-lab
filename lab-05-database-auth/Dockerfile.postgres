FROM postgres:15

ENV DEBIAN_FRONTEND=noninteractive

# Install Kerberos client
RUN apt-get update && apt-get install -y \
    krb5-user \
    krb5-config \
    libpq-dev \
    vim \
    iputils-ping \
    net-tools \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Create directory for keytabs
RUN mkdir -p /etc/keytabs

# The entrypoint script will handle PostgreSQL initialization
# We'll override the config files via volume mounts
